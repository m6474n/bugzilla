<% if @projects.any? %>
 <div class="card my-4">
  <div class="card-header">
   <h2>Search Results</h2>
  </div>
  <div class="card-body">
   <ul>
    <% @projects.each do |project| %>
      <li><%= link_to project.title, project_path(project) %></li>
    <% end %>
  </ul>
  </div>
</div>
 
<% else %>
  <p>No projects found</p>
<% end %>
