<%= form_with model: @bug do |form| %>
  <div class="field">
    <%= form.label :type, class:'form-label' %><br>
    
    <%= form.select :bug_type, Bug.bug_types.keys.map { |t| [t.humanize, t] }, { include_blank: false },  { class: "form form-group form-control" } %>
  </div>
   <div class="field">
    <%= form.label :status, class:'form-label' %><br>
    <%= form.select :status, Bug.statuses.keys.map { |status| [status.humanize, status] }, { include_blank: true }, { class: "form form-group form-control" } %>
  </div>
  <div class="field">
    <%= form.label :title, class:'form-label' %><br>
    <%= form.text_field :title, class:'form-control' %>
      <% @bug.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <%= form.hidden_field :project_id, value: @project.id if @project %>

  <div class="field">
    <%= form.label :body, class:'form-label' %><br>
    <%= form.text_area :body, class:'form-control' %>
      <% @bug.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
    <div class="field" >
    <%= form.label :image, 'Upload Image(.png or .gif only)'%> <br>
    <%= form.file_field :image, accept: 'image/png,image/gif' %>
    <% @bug.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
          <% end %>

  </div>
  <div>
    <%= form.submit "Ceate new Bug ",  class:'btn btn-success my-2' %>
  </div>
<% end %>

